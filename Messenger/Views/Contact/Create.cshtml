@using System.Diagnostics.CodeAnalysis
@model Messenger.PL.ViewModels.ContactViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div>
    <h1>Add contact:</h1>
    <form method="post">

        <div>
            <label class="form-label" asp-for="UserEmail"></label>
            <input class="form-control" required type="email" name="UserEmail" asp-for="UserEmail" />
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="@Localizer["AddButton"]" />
        </div>
    </form>
</div>
